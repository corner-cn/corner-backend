/booths:
    displayName: booth
    description: Get all booths according to query

    post:
        body:
            application/json:
            example: |
                {
                    "longitude": string,
                    "latitude": string
                    "category": string,
                    "filter": string,
                    "distance": string,
                    "type": string
                    "keywords": [string, string...]
                }

        responses:
            200:
            body:
                application/json:
